    ViewData["Title"] = "Delete";
}

<h2>Exclusão</h2>

<h3>Tem certeza que deseja excluir este registo?</h3>
<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome/Login:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Usuario.Usu_Nome)
        </dd>
        <dt>
            Senha:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Usuario.Usu_Senha)
        </dd>
