@page
@model ProjetoNadd3.Pages.Usuarios.CreateModel

@{
    ViewData["Title"] = "Usuário";
}

<h2>Cadastro de Usuários</h2>

<h4>Usuário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nome/Login:</label>
                <input asp-for="Usuario.Usu_Nome" class="form-control" />
                <span asp-validation-for="Usuario.Usu_Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Senha:</label>
                <input asp-for="Usuario.Usu_Senha" class="form-control" />
                <span asp-validation-for="Usuario.Usu_Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Perfil:</label>
                <select asp-for="Usuario.PerfisId" class ="form-control" asp-items="ViewBag.PerfisId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
