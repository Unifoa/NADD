@page
@model ProjetoNadd3.Pages.Avaliacoes.CreateModel

@{
    ViewData["Title"] = "Avaliação";
}

<h2>Cadastro de Avaliação</h2>

<h4>Avaliacao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Prova:</label>
                <select asp-for="Avaliacao.ProvasId" class="form-control" asp-items="ViewBag.ProvasId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Número da Questão:</label>
                <input asp-for="Avaliacao.Ava_Questao" class="form-control" />
                <span asp-validation-for="Avaliacao.Ava_Questao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nível de Clareza:</label>
                <select asp-validation-for="Avaliacao.Ava_Clareza" class="form-control">
                    <option value="0">MUITO RUIM</option>
                    <option value="0.25">RUIM</option>
                    <option value="0.5">REGULAR</option>
                    <option value="0.75">BOM</option>
                    <option value="1">EXCELENTE</option>
                </select>
                <span asp-validation-for="Avaliacao.Ava_Clareza" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nível de Complexibilidade:</label>
                <select asp-validation-for="Avaliacao.Ava_Complexibilidade" class="form-control">
                    <option value="0">MUITO RUIM</option>
                    <option value="0.25">RUIM</option>
                    <option value="0.5">REGULAR</option>
                    <option value="0.75">BOM</option>
                    <option value="1">EXCELENTE</option>
                </select>
                <span asp-validation-for="Avaliacao.Ava_Complexibilidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nível de Complexibilidade:</label>
                <select asp-validation-for="Avaliacao.Ava_Contextualizacao" class="form-control">
                    <option value="0">MUITO RUIM</option>
                    <option value="0.25">RUIM</option>
                    <option value="0.5">REGULAR</option>
                    <option value="0.75">BOM</option>
                    <option value="1">EXCELENTE</option>
                </select>
                <span asp-validation-for="Avaliacao.Ava_Contextualizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Avaliacao.Ava_Questao_Explicito" class="control-label">Valor da QUestão Explicito?</label>
                <select asp-validation-for="Avaliacao.Ava_Questao_Explicito" class="form-control">
                    <option value="0">NÃO</option>
                    <option value="1">SIM</option>
                </select>
                <span asp-validation-for="Avaliacao.Ava_Questao_Explicito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Valor da Questão:</label>
                <input asp-for="Avaliacao.Ava_Valor_Questao" class="form-control" />
                <span asp-validation-for="Avaliacao.Ava_Valor_Questao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Multipla Escolha?</label>
                <select asp-validation-for="Avaliacao.Ava_Mult_Escolha" class="form-control">
                    <option value="0">NÃO</option>
                    <option value="1">SIM</option>
                </select>
                <span asp-validation-for="Avaliacao.Ava_Mult_Escolha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Observação:</label>
                <input asp-for="Avaliacao.Ava_Observacao" class="form-control" />
                <span asp-validation-for="Avaliacao.Ava_Observacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
