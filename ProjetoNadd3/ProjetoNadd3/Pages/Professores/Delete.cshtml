@page
@model ProjetoNadd3.Pages.Professores.DeleteModel

@{
    ViewData["Title"] = "Professor";
}

<h2>Exclusão</h2>

<h3>Tem certeza que deseja excluir este registo?</h3>
<div>
    <h4>Professor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome do Professor:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Professor.Prof_Nome)
        </dd>
        <dt>
            Matrícula do Professor:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Professor.Prof_Matricula)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Professor.Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Voltar a Lista</a>
    </form>
</div>
