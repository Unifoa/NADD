@page
@model ProjetoNadd3.Pages.Professores.EditModel

@{
    ViewData["Title"] = "Professor";
}

    <h2>Editar o Professor</h2>

<h4>Professor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Professor.Id" />
            <div class="form-group">
                <label class="control-label">Nome do Professor:</label>
                <input asp-for="Professor.Prof_Nome" class="form-control" />
                <span asp-validation-for="Professor.Prof_Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Matrícula do Professor:</label>
                <input asp-for="Professor.Prof_Matricula" class="form-control" />
                <span asp-validation-for="Professor.Prof_Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
