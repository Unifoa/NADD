@page
@model ProjetoNadd3.Pages.Perfis.EditModel

@{
    ViewData["Title"] = "Perfil";
}

<h2>Edit</h2>

<h4>Perfil</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Perfil.Id" />
            <div class="form-group">
                <label class="control-label">Nome do Perfil:</label>
                <input asp-for="Perfil.Perfil_Nome" class="form-control" />
                <span asp-validation-for="Perfil.Perfil_Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
