@page
@model ProjetoNadd3.Pages.Areas.IndexModel

@{
    ViewData["Title"] = "Áreas";
}

    <h2>Áreas</h2>

<p>
    <a asp-page="Create">Nova Área</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <font color="White">Nome da Área</font>
</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Area) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Area_Nome)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
