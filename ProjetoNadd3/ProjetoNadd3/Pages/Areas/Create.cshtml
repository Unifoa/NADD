@page
@model ProjetoNadd3.Pages.Areas.CreateModel

@{
    ViewData["Title"] = "Áreas";
}

<h2>Criar Área</h2>

<h4>Area</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nome da Área</label>
                <input asp-for="Area.Area_Nome" class="form-control" />
                <span asp-validation-for="Area.Area_Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
