@page
@model ProjetoNadd3.Pages.Cursos.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Exclusão</h2>

<h3>Tem certeza que deseja excluir este registo?</h3>
<div>
    <h4>Curso</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome do Curso:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Curso.Cur_Nome)
        </dd>
        <dt>
            Qtd. de Periodos:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Curso.Cur_Num_Periodos)
        </dd>
        <dt>
            Curso Anual?
        </dt>
        <dd>
            @if (Html.DisplayTextFor(model => model.Curso.Cur_Ano_Sem) == "0")
            {
                <text>NÃO</text>
            }
            else
            {
                <text>SIM</text>
            }

        </dd>
        <dt>
            Área do Cruso:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Curso.Areas.Area_Nome)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Curso.Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Voltar a Lista</a>
    </form>
</div>
